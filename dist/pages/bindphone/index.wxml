  <view class="topinfo">
      <view class="inputmain">
        <view class="phonetext">绑定手机号</view>
        <input type="text" disabled="{{confirmform}}"  class="{{phonedata?'selected':''}}"placeholder-class="placeholder-class" placeholder="请填写手机号" value="{{patientphone}}" bindblur="blured" class="paddingLeft" data-wpyblured-a="phone"/>
