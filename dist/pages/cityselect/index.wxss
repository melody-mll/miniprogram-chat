.top_box {
  background-color: #f7f7f7;
  border-bottom: 1px solid #ece3e3;
}

.top_box .top1 {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  background-color: #fff;
  line-height: 40px;
  padding: 0 10px;
}

.top_box .top1 .firstText {
  font-size: 30rpx;
  font-weight: 600;
  margin: 0 10px;
}

.top_box .position {
  width: 240rpx;
  background-color: #fff;
  padding: 5px 15px;
  display: flex;
  /* display: inline-block; */
  margin: 0 10px;
  border-radius: 3px;
  border: 1px solid #f1f1f1;
}

.top_box .title1 {
  font-size: 12px;
  color: #999;
  padding: 0 10px;
  margin: 10px 10px;
}

.top_box .title {
  font-size: 12px;
  color: #999;
  padding: 0 10px;
  margin: 10px 0 0;
}

.top_box .top2 {
  margin: 0 10px;
}

.tag1 {
  font-size: 14px;
  padding: 6px 22rpx;
  border: 1px solid #ff5800;
  margin-top: 10px;
  border-radius: 4px;
  color: #ff5800;
}

.tag2 {
  font-size: 14px;
  padding: 6px 22px;
  border: 1px solid #ccc;
  margin-top: 10px;
  border-radius: 4px;
  color: #666;
  display: inline-block;
  margin-right: 10px;
}

.now-city .now-city-name {
  display: flex;
  background: white;
  font-size: 15px;
  line-height: 1.0;
  letter-spacing: 0.4px;
  color: #333;
  padding: 6px 16rpx;
  border: solid 1px #dbdbdb;
  margin-top: 9px;
}

.icon-ser {
  position: absolute;
  left: 25px;
  top: 0;
  z-index: 9;
}


.search {
  width: 100%;
  height: 30px;
  border-radius: 20px;
  border: 1px solid #ccc;
  line-height: 30px;
}

.ui-dialog-header {
  background-color: #f9f9f9;
}

.ui-dialog-header .head_title {
  width: 100%;
  font-size: 14px;
  color: #454648;
  line-height: 30px;
  border-radius: 20px;
  background-color: #ebecee;
}

.ui-dialog-header .head_title .ui-icon {
  line-height: 30px;
}

.btn_win {
  padding: 0 10px;
}
.ui-icon {
  font-family: "ui-icon" !important;
  font-size: 16px;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}
.sample_content .ui-icon {
  display: inline-block;
  transform: rotate(0deg);
  transition: all 0.3s ease-in;
  margin-left: 5rpx;
}

.sample_content .ui-icon.rotate {
  transform: rotate(180deg);
}
.ui-tags {
  display: flex;
  flex-wrap: wrap;
}
.ui-tag-item{
  margin-bottom: 5rpx;
  margin-right: 5rpx;
  font-size: 14rpx;
  width: 220rpx;
  margin-right: 10rpx;
}
.miniitem{
  font-size: 14px;
  margin-top: 10px;
  border-radius: 4px;
  color: #666;
  background-color: #fff;
  border: 1px solid #f1f1f1;
  line-height: 35px;
  text-align: center;
}
.imgs{
  width: 40rpx;
  height: 50rpx;
  margin-right: 14rpx;
}
image{
  width: 100%;
  height: 100%;
}
