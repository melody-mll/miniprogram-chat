.articleCard-container {
  width:700rpx;
  height: 300rpx;
  margin: 30rpx;
  border-radius: 30rpx;
  box-sizing: border-box;
  justify-content: center;
  align-items: center;
}
.articleCard-container .inner-warp {
  height: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 0rpx 32rpx;
}
.articleCard-container .inner-warp .right .title {
  color: #5d5d5d;
  font-size: 35rpx;
}
.articleCard-container .inner-warp .right .texttype {
  color: #000;
  font-size: 50rpx;
}
.articleCard-container .inner-warp .right {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex-grow: 1;
}
.babySchool-container .warp {
  margin-top: 80rpx;
  height: 80rpx;
  box-sizing: border-box;
  border-bottom: 2rpx solid #f2f2f2;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0rpx 32rpx;
}
.babySchool-container .warp .title {
  color: #5d5d5d;
  font-size: 32rpx;
  font-weight: bolder;
}